# monitors
output eDP-1 {
  background ~/Pictures/Wallpapers/background.png fill
  resolution 1920x1200@165Hz
  max_render_time 6
  adaptive_sync on
}

# configs
include ~/.config/sway/environment.conf
include ~/.config/sway/general.conf
include ~/.config/sway/keybindings.conf
include ~/.config/sway/windowrules.conf

# swayidle + swaylock
exec swayidle -w \
  timeout 1200 'swaylock -f' \
  timeout 1230 'swaymsg "output * dpms off"' \
  resume 'swaymsg "output * dpms on"' \
  unlock 'swaymsg reload' \
  before-sleep 'swaylock -f'
